<main>
    <h1>Личный кабинет</h1>
    <section class="my-account-first-screen">
        <h2 class="my-account-first-screen__title">Здравствуйте, User Name</h2>
        <p class="my-account-first-screen__text">Добро пожаловать в ваш личный кабинет</p>
    </section>
    <section class="form-block">
        <h2 class="visually-hidden">Данные вашей учётной записи</h2>
        <div class="form-block__btns">
            <button>Учетная запись</button>
            <button>Мои заказы</button>
        </div>
        <form class="form-my-account" method="post">
            <p class="input-group__wrapper">
                <label for="user-name" class="input-group__label">Имя:*</label>
                <input type="text" name="login" id="user-name" placeholder="Илья" class="input-group__input">
            </p>
            <p class="input-group__wrapper">
                <label for="user-surname" class="input-group__label">Фамилия:*</label>
                <input type="text" name="surname" id="user-surname" placeholder="Фролов" class="input-group__input">
            </p>
            <p class="input-group__wrapper">
                <label for="user-surname" class="input-group__label">Фамилия:*</label>
                <input type="text" name="surname" id="user-surname" placeholder="Фролов" class="input-group__input">
            </p>
            <p class="input-group__wrapper">
                <label for="email" class="input-group__label">E-mail:*</label>
                <input type="email" id="email" name="email" placeholder="frolo1990@gmail.com"
                    class="input-group__input">
            </p>
            <p class="input-group__wrapper">
                <label for="tel" class="input-group__label">Телефон:*</label>
                <input type="tel" id="tel" name="tel" placeholder="8 (960) 900-60-90" class="input-group__input">
            </p>
            <a class="form-my-account__link" href="#">Сменить пароль</a>
            <button class="form-my-account__btn" type="submit">Сохранить</button>
        </form>
        <div class="my-orders"></div>
    </section>
</main>
{{> footer}}